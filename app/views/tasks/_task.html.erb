<%= turbo_frame_tag task do %>
  <%= link_to edit_task_path(task), data: { turbo_frame: :_top }, class: 'btn btn-link d-block text-decoration-none text-start px-0' do %>
    <div class="card">
      <div class="card-body d-flex justify-content-between align-items-center">
        <p class="card-text mb-0">
          <%= task.name %>
        </p>
        <div class="d-flex justify-content-between align-items-center gap-3">
          <p class="card-text mb-0">
            締切日： <%= l(task.deadline_on) if task.deadline_on.present? %>
          </p>
          <span class="badge text-bg-secondary">
            <%= task.status_text %>
          </span>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
