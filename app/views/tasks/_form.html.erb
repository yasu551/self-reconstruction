<%= simple_form_for(@task) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :completion_condition, input_html: { data: { controller: "textarea-autogrow" } } %>
    <%= f.input :content, input_html: { data: { controller: "textarea-autogrow" } }  %>
    <%= f.input :yesterday_content, input_html: { data: { controller: "textarea-autogrow" } }  %>
    <%= f.input :memo, input_html: { data: { controller: "textarea-autogrow" } }  %>
    <%= f.input :status %>
    <%= f.input :deadline_on, html5: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary'  %>
  </div>
<% end %>
