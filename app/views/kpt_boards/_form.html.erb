<%= simple_form_for(kpt_board) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :start_on, html5: true %>
    <%= f.input :end_on, html5: true %>
    <% if kpt_board.persisted? %>
      <%= f.input :keep_action_draft, input_html: { data: { controller: "textarea-autogrow" } } %>
      <%= f.input :problem_action_draft, input_html: { data: { controller: "textarea-autogrow" } } %>
      <%= f.input :try_action_draft, input_html: { data: { controller: "textarea-autogrow" } } %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-primary' %>
  </div>
<% end %>
